# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database
MONGO_URI=mongodb://localhost:27017/ebay-clone
MONGO_URI_TEST=mongodb://localhost:27017/ebay-clone-test

# JWT
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRE=7d
JWT_COOKIE_EXPIRE=7

# FreeImage.host API (Image Upload)
FREEIMAGE_API_KEY=your_freeimage_api_key_here

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Admin Settings
ADMIN_EMAIL=admin@ebay-clone.com
ENABLE_2FA=false

# Redis (Optional - for sessions/caching)
REDIS_URL=redis://localhost:6379

# Socket.io
SOCKET_PORT=5001
